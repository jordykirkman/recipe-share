<div class="grid-container">
	<div class="one-third">
		<ul class="standard-list">
			<li>{{#link-to "book.index"}}"{{model.name}}" Settings{{/link-to}}</li>
			<li>{{#link-to "book.newrecipe"}}New Recipe{{/link-to}}</li>
			<li class="padd">{{input valueBinding="recipeFilter" placeholder="filter by keyword"}}</li>
			<li class="separator">Recipes</li>
			{{#each filteredRecipes}}
				{{#unless deleted}}
			  <li>{{#link-to "recipe" this}}{{name}}{{/link-to}}</li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>

	<div class="two-thirds">
		{{outlet}}
	</div>
</div>