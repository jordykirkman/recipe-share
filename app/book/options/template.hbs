{{#link-to 'book.recipe' this.model classBinding=":button :small :options"}}back{{/link-to}}
<h3>{{model.name}}</h3>

{{#if isRecipeCreator}}

	<p>{{{textarea value=model.description name="description" placeholder="A long time family recipe that everyone forgets the details of..."}}}</p>
	<p>{{{textarea value=model.ingredients name="ingredients" placeholder="1 Cup Polyjuice Potion"}}}</p>
	<p>{{{textarea value=model.instructions name="instructions" placeholder="Stir together gently..."}}}</p>

	<label>Tags</label>
	{{input value=model.tags name="tags" placeholder="Breakfast, Mexican, gluten free"}}

{{/if}}

<label>Include in books {{model.books.length}}</label>
{{#each userController.books as |book|}}
	{{checkbox-list model=book contextList=model.books}}
{{/each}}

<button class="button small" {{action "save"}}>Save</button>