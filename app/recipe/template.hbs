<div class="large-8 columns text-right collapse">
	<a class="button small tab" {{action 'optionsToggle'}}>share</a>
	<a {{bind-attr class=":button :small :tab options:active"}} {{action 'optionsToggle'}}>options</a>
</div>
<div class="large-8 columns recipe tabbed collapse">
		<h3>{{model.name}}</h3>

		{{#unless options}}

			<p>{{{'recipe-formatting' model.description}}}</p>

			<span class="label">{{model.tags}}</span>

		{{else}}

		{{#each book in controllers.user.model.books}}
			<button {{action 'copyToBook' book}}>{{book.name}}</button>
		{{/each}}

	{{/unless}}
</div>