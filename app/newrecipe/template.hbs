<div class="large-8 columns recipe collapse">
	<h3>New Recipe</h3>

	<label>Name</label>
	{{input valueBinding="model.name" name="name"}}

	<p>{{{textarea valueBinding="model.description" name="description" placeholder="A long time family recipe that everyone forgets the details of..."}}}</p>

	<label>Tags</label>
	{{input valueBinding="model.tags" name="tags" placeholder="Breakfast, Mexican, gluten free"}}

	{{#each book in controllers.user.model.books}}
		<button class="tiny button" {{action 'addBookToRecipe' book}}>{{book.name}}</button>
	{{/each}}

	<button {{action "saveRecipe"}}>Save</button>
	
</div>