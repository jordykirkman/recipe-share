<div class="row">
	<div class="topbar">
		Hi {{model.username}}, what should we cook?
		<button class="button small" {{action "logout"}}>Log Out</button>
	</div>
</div>
<div class="row collapse">
	<div class="large-4 columns">
		<ul class="side-nav">
			<li>{{#link-to "user.index"}}Your Settings{{/link-to}}</li>
			<li>{{#link-to "newbook"}}New Book{{/link-to}}</li>
			<li class="separator">Books</li>
			{{#each book in model.books}}
			
				<li>{{#link-to "book" book}}{{book.name}}{{/link-to}}</li>

			{{/each}}
		</ul>
		{{outlet 'book'}}
	</div>
	
	{{outlet 'recipe'}}
	
</div>